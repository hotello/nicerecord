{
  "expo": {
    "name": "Nicerecord",
    "description": "The minimalistic EHR.",
    "slug": "nicerecord",
    "owner": "hotello",
    "privacy": "unlisted",
    "platforms": ["ios", "android", "web"],
    "version": "0.0.7",
    "orientation": "default",
    "primaryColor": "#623cea",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.nicerecord.app",
      "isTabletOnly": true
    },
    "web": {
      "favicon": "./assets/icon.png",
      "build": {
        "babel": {
          "include": ["i18next", "react-i18next", "formik"]
        }
      }
    }
  }
}
